{
  "name": "chain-ui",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "root": "chain-ui",
  "sourceRoot": "chain-ui",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        
        "outputPath": "chain-ui/packages/galachain-ui-vue/dist",
        "main": "chain-ui/src/vue-package.ts",
        "tsConfig": "chain-ui/tsconfig.app.json",
        "configFile": "chain-ui/vite.config.vue.ts",
        "assets": ["chain-ui/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs connect {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "config": "chain-ui/vitest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
